<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/parent_layout"
                                                   android:background="@color/colorMain">


    <LinearLayout
            android:id="@+id/taskNotCompleteImageLayout"
            android:orientation="horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <ImageView
                android:id="@+id/taskNotCompleteImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_not_done_white_20dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/taskTextLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/taskNotCompleteImageLayout"
            android:layout_marginStart="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:id="@+id/taskText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asdasdasdassdfsdfsdfsdfsdfsdfsdfsasdsssdsds"
                android:textSize="18sp" android:textColor="@color/colorItemText" android:textAlignment="viewStart"
                android:maxWidth="280dp" />
        <TextView
                android:id="@+id/detailsTaskText"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:visibility="gone"
                android:textSize="14sp" android:textColor="@color/colorEmailText"/>
        <com.google.android.material.chip.Chip
                android:id="@+id/taskNotificationDateChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipStrokeWidth="1dp"
                android:clickable="false"
                app:chipBackgroundColor="@color/colorMain"
                app:chipCornerRadius="10dp"
                android:visibility="gone"
                android:text="2018 December 12, 1:00 PM"
                app:chipStrokeColor="@color/colorAccent"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_marginTop="4dp" android:textAppearance="@style/ButtonStyle"
                android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#44ACACAC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskTextLayout"
            android:layout_marginTop="25dp"
            app:layout_constraintVertical_bias="0.0" tools:layout_editor_absoluteX="16dp">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>